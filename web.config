<configuration>
	<system.webServer>
		<!--  Indicate IIS to use iisnode to handle requests to src/server.js -->
		<handlers>
			<add name="iisnode" path="src/server.js" verb="GET" modules="iisnode" />
		</handlers> 
		<!--  route all request to the src/server.js file -->
		<rewrite>
			<rules>
				<rule name="root">
					<match url="/*" />
					<action type="Rewrite" url="src/server.js" />
				</rule>
			</rules>
		</rewrite>
		<!-- exclude node_modules directory and subdirectories from serving
		by IIS since these are implementation details of node.js applications -->
		<security>
			<requestFiltering>
			<hiddenSegments>
				<add segment="node_modules" />
			</hiddenSegments>
			</requestFiltering>
		</security>    
	</system.webServer>
</configuration>